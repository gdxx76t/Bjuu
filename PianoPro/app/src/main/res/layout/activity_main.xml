<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <!-- Control Panel -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/control_panel"
        android:padding="8dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Interval Ratio Control -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/interval_ratio_setting"
                android:textSize="12sp"
                android:textColor="@color/black" />

            <SeekBar
                android:id="@+id/intervalRatioSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="2999"
                android:progress="1030" />

            <TextView
                android:id="@+id/intervalRatioText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/interval_ratio"
                android:textSize="10sp"
                android:textColor="@color/accent" />

        </LinearLayout>

        <!-- Octave Count Display -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/octaveCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/octave_count"
                android:textSize="12sp"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Toggle Switches -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <Switch
                android:id="@+id/showFrequencySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/show_frequency"
                android:textSize="10sp"
                android:checked="true" />

            <Switch
                android:id="@+id/horizontalLayoutSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/horizontal_layout"
                android:textSize="10sp"
                android:checked="false" />

            <Switch
                android:id="@+id/dualViewSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dual_view"
                android:textSize="10sp"
                android:checked="false" />

        </LinearLayout>

        <!-- Recording Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <Button
                android:id="@+id/recordAudioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/record_audio"
                android:textSize="10sp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/recordVideoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/record_video"
                android:textSize="10sp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

    <!-- Frequency Display -->
    <TextView
        android:id="@+id/frequencyDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frequency_display"
        android:textSize="16sp"
        android:textColor="@color/frequency_text"
        android:textStyle="bold"
        android:padding="8dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/controlPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Piano Container -->
    <FrameLayout
        android:id="@+id/pianoContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/frequencyDisplay"
        app:layout_constraintBottom_toTopOf="@id/creditsText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Piano View will be added programmatically -->

    </FrameLayout>

    <!-- Credits -->
    <TextView
        android:id="@+id/creditsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/credits"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

